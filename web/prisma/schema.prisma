// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PageContent {
  id        String   @id @default(cuid())
  page      String   @unique // home, about, philosophy, etc.
  section   String   // hero, description, etc.
  key       String   // title, subtitle, content, imageUrl, etc.
  value     String   // actual content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([page, section, key])
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  summary     String
  content     String
  coverImage  String?
  tags        String   // JSON array as string
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Media {
  id          String   @id @default(cuid())
  title       String
  type        String   // image, video
  url         String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Documentation {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  attachments String?  // JSON array as string
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Activity {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  attachments String?  // JSON array as string
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Report {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  attachments String?  // JSON array as string
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id            String              @id @default(cuid())
  title         String
  slug          String              @unique
  date          DateTime
  time          String
  location      String
  description   String
  bannerImage   String?
  capacity      Int?
  published     Boolean             @default(false)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  registrations EventRegistration[]
}

model EventRegistration {
  id           String   @id @default(cuid())
  eventId      String
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  fullName     String
  email        String
  phone        String
  organization String?
  notes        String?
  createdAt    DateTime @default(now())
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  assignee    String?
  priority    String   @default("medium") // low, medium, high
  status      String   @default("pending") // pending, in_progress, completed
  remindAt    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
